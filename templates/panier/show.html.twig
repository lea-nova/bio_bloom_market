{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Panier</h1>

	<table class="table">
		<tbody>
			{% if panier.getItems is empty %}
				<p>
					Pas encore de produit dans le panier
				</p>

			{% else %}
				<ul class=" flex flex-col items-center">
					{% for item in panier.getItems %}
						<li class="flex flex-row justify-around w-[50%] m-5 ">
							<b>Produit:
							</b>
							{{item.produit.nom}}
							<b>Quantit√©:
							</b>
							{{item.quantite}}

							{{ include('ligne_panier/_delete_form.html.twig') }}

						</li>
					{% endfor %}
				</ul>

			{% endif %}
		</tbody>
	</table>


	{# {{ include('panier/_delete_form.html.twig') }} #}
{% endblock %}
