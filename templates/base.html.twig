<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bio Bloom Market
			{% endblock %}
		</title>
		<link
		rel=" icon" href=" {{asset(" images/logo4.jpg")}} ">

		{# // <script src="https://cdn.tailwindcss.com"></script> #}
		{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			//
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

		{% endblock %}
	</head>
	<body class="d-flex flex-column min-vh-100">
		<nav class=" navbar navbar-expand-lg bg-body-tertiary fixed-top  ">
			<div class="container-fluid  ">
				<a class=" navbar-brand" href=" {{path('app_main')}} "><img class="logo" src="{{asset("images/logo.jpg")}}" alt="logo de BioBloom Market"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse " id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-between  ">
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href=" {{path('app_main')}} ">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Produits</a>
						</li>
						<li class="nav-item dropdown">
							<button class="btn  dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Catégories
							</button>
							<ul class="dropdown-menu ">
								<li>
									<a class="dropdown-item" href="#">Fruits et Légumes
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Produits Laitiers et Oeufs
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										Épicerie Salée</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										Épicerie Sucrée</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										Boissons</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										Voir plus</a>
								</li>
							</li>
						</li>
					</ul>
				</li>
				<li>
					<a class="nav-link" href="#">Promotions</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Contact</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">A propos</a>
				</li>
				<li class="d-flex flex-row mb-3 justify-content-between">
					{% if  app.user  %}
						{# <span class="d-flex flex-row mb-3 justify-content-between d-flex align-items-center"> #}
						<a class="nav-link btn bg-success text-white mx-2" href="{{ path('app_user_show', {'id': app.user.id}) }}">Mon profil</a>
						<a class="nav-link btn bg-success text-white mx-2 " href="{{path('app_logout')}}">Se déconnecter</a>
						{# </span> #}
					{% else %}
						<a class="nav-link btn bg-success text-white" href="{{path('app_login')}}">Connexion/Inscription</a>
					{% endif %}
				</li>

				<li>
					<a class="nav-link " href="#"><img src="{{ asset('images/panier.png')}}" class="img-panier" alt="logo panier"></a>
				</li>
				<li>
					<form class="d-flex" role="search">
						<input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
						<button class="btn btn-outline-success text-success" type="submit">Rechercher</button>
						{# <button class="btn btn-outline-success" type="submit">Compte</button> #}
					</form>
				</li>
			</ul>
		</nav>
		<main>
			<div
				class="container pt-5 mt-4">
				{# Affichage des messages flash #}
				{% if app.user %}
					<div class="mb-2">You are logged in as
						{{ app.user.userIdentifier }},<a href="{{ path('app_logout') }}">Logout</a>
						<small>
							<em>A modifier</em>
						</small>
					</div>
				{% endif %}
				{% for type, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ type }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				{% block body %}{% endblock %}
			</div>
		</main>

		<div class="container-fluid bg-white mt-auto p-2">
			<footer class="py-3 my-4">
				<ul class="nav justify-content-center border-bottom pb-3 mb-3">
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-body-secondary">Home</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-body-secondary">Features</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-body-secondary">Pricing</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-body-secondary">FAQs</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-body-secondary">About</a>
					</li>
				</ul>
				<p class="text-center text-body-secondary">© 2024 Company, Inc</p>
				<p class="text-center text-body-secondary">
					Image par
					<a target="_blank" class=" px-2 text-body-secondary" href="https://pixabay.com/fr/users/pexels-2286921/?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=1834416">Pexels</a>
					de
					<a target="_blank" class="  px-2 text-body-secondary" href="https://pixabay.com/fr//?utm_source=link-attribution&utm_medium=referral&utm_campaign=image&utm_content=1834416">Pixabay</a>
				</p>
			</footer>
		</div>
	</body>
</html></body></body></html>
