{% extends 'base.html.twig' %}

{% block title %}Adresses de
	{{ user.prenom }}
{% endblock %}

{% block body %}
	<h1>Adresses de
		{{ user.prenom }}</h1>

	<ul>
		{% for adresse in adresses %}
			<li>
				{{ adresse.id }}
				-
				{{ adresse.ligne1 }}
				<a href="{{ path('app_user_adresses_update', {'uuid': user.uuid, 'ulid_adresse': adresse.ulid}) }}">Modifier</a>
				<form action="{{ path('app_user_adresses_delete', {'uuid': user.uuid, 'ulid_adresse': adresse.ulid}) }}" method="POST" style="display: inline-block;">
					<input type="hidden" name="_method" value="DELETE">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ adresse.ulid) }}">
					<button type="submit">Supprimer</button>
				</form>
			</li>
		{% endfor %}
	</ul>

	{# Ajouter des liens pour ajouter, modifier ou supprimer des adresses si nÃ©cessaire #}
	<a href="{{ path('app_user_adresses_new', {'uuid': user.uuid}) }}">Ajouter une nouvelle adresse</a>
{% endblock %}
