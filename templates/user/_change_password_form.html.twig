{% extends 'base.html.twig' %}
{% block title %}User index
{% endblock %}
{% block body %}
	<div class=" pt-5w-[70%]  max-lg:w-[100%] ">
		<div class=" flex ">
			<div class=" w-full pb-10 flex items-center justify-center   ">

				<div class="p-12 flex flex-col justify-middle border-2 rounded-md  border-primary-accent max-sm:w-[95%] md:w-[50%] lg:w-[45rem]  ">
					{{ form_start(editPassword) }}
					<div class="flex flex-col w-1/2">
						{{ form_label(editPassword.oldPassword) }}
						{{ form_widget(editPassword.oldPassword, {'attr': {'class': ' max-lg:w-full input-text blur:!outline-none focus:!outline-none'}}
						) }}
						{{ form_errors(editPassword.oldPassword) }}

						{{ form_label(editPassword.newPassword) }}
						{{ form_widget(editPassword.newPassword, {'attr': {'class': ' max-lg:w-full input-text blur:!outline-none focus:!outline-none'}}
						) }}
						{{ form_errors(editPassword.newPassword) }}


						{{ form_label(editPassword.checkNewPassword) }}
						{{ form_widget(editPassword.checkNewPassword, {'attr': {'class': ' max-lg:w-full input-text blur:!outline-none focus:!outline-none'}}
						) }}
						{{ form_errors(editPassword.checkNewPassword) }}


						<button class="btn-cta">{{ button_label|default('Update') }}</button>
					</div>
					{{ form_end(editPassword) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
