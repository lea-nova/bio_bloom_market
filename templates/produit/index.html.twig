{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				{% if is_granted("ROLE_ADMIN") %}

					<th>Id</th>
				{% endif %}
				<th>Nom</th>
				<th>Description</th>
				{% if is_granted("ROLE_ADMIN") %}

					<th>Slug</th>
				{% endif %}
				<th>Image</th>
				{% if is_granted("ROLE_ADMIN") %}

					<th>IsVisible</th>
					<th>Stock</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					{% if is_granted("ROLE_ADMIN") %}

						<td>{{ produit.id }}</td>
					{% endif %}
					<td>{{ produit.nom }}</td>
					<td>{{ produit.description }}</td>
					{% if is_granted("ROLE_ADMIN") %}

						<td>{{ produit.slug }}</td>
					{% endif %}

					<td>
						{% if  produit.image %}
							<img height="50" width="50" src="{{asset('uploads/produits/'~ produit.image)}}">
						{% else %}
							Pas d'images
						{% endif %}
					</td>
					{% if is_granted("ROLE_ADMIN") %}

						<td>{{ produit.isVisible ? 'Yes' : 'No' }}</td>
						<td>{{ produit.stock }}</td>
						<td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					{% endif %}
					<td>
						<a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
						{% if is_granted("ROLE_ADMIN") %}

							<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('app_produit_new') }}">Create new</a>
	{% endif %}
{% endblock %}
